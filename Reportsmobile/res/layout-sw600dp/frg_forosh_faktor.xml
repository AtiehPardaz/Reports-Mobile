<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center"
    android:layout_weight="1"
    android:gravity="center"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginBottom="5dp"
        android:gravity="right" >

        <ImageButton
            android:id="@+id/imgbtn_fromdatefaktor_frosh"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_gravity="center"
            android:background="@drawable/ic_action_date" />

        <EditText
            android:id="@+id/et_fromdate_faktor"
            android:layout_width="240dp"
            android:layout_height="50dp"
            android:layout_gravity="center"
          
            android:textSize="22sp" >

            <requestFocus />
        </EditText>

        <TextView
            android:id="@+id/TextView01"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right|center"
            android:gravity="right"
            android:text="از تاریخ:  "
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textColor="#ffffff"
            android:textSize="22sp" />

    </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginBottom="5dp"
            android:gravity="right" >

            <ImageButton
                android:id="@+id/imgbtn_todatecustomer_forosh"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_gravity="center"
                android:background="@drawable/ic_action_date" />

            <EditText
                android:id="@+id/et_todate_forosh"
                android:layout_width="240dp"
                android:layout_height="50dp"
                android:layout_gravity="center"
              
                android:textSize="22sp" />

            <TextView
                android:id="@+id/tv_todate_forosh"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right|center"
                android:gravity="right"
                android:text="تا تاریخ:  "
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:textColor="#ffffff"
                android:textSize="22sp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginBottom="5dp"
            android:gravity="right" >

            <ImageButton
                android:id="@+id/imgbtn_customer_forosh"
               android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_gravity="center"
                android:background="@drawable/down" />

            <EditText
                android:id="@+id/et__customer_forosh"
                android:layout_width="240dp"
                android:layout_height="50dp"
                android:layout_gravity="center"
                android:hint="علی ایرانی"
              
                android:textSize="22sp" />

            <TextView
                android:id="@+id/tv__customer_forosh"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right|center"
                android:gravity="right"
                android:text="مشتری:   "
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:textColor="#ffffff"
                android:textSize="22sp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginBottom="5dp"
            android:gravity="right" >

            <ImageButton
                android:id="@+id/imgbtn_bazaryab_forosh"
               android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_gravity="center"
                android:background="@drawable/down" />

            <EditText
                android:id="@+id/et__bazarya_forosh"
                android:layout_width="240dp"
                android:layout_height="50dp"
                android:layout_gravity="center"
                android:hint="سیروس صداقت"
              
                android:textSize="22sp" />

            <TextView
                android:id="@+id/tv__bazarya_forosh"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right|center"
                android:gravity="right"
                android:text="بازاریاب: "
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:textColor="#ffffff"
                android:textSize="22sp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginBottom="10dp"
            android:gravity="right" >

            <ImageButton
                android:id="@+id/imgbtn_foroshande_forosh"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_gravity="center"
                android:background="@drawable/down" />

            <EditText
                android:id="@+id/et__foroshande_forosh"
                android:layout_width="240dp"
                android:layout_height="50dp"
                android:layout_gravity="center"
                android:hint="محمود مقدم"
              
                android:textSize="22sp" />

            <TextView
                android:id="@+id/tv__foroshande_forosh"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right|center"
                android:gravity="right"
                android:text="فروشنده:"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:textColor="#ffffff"
                android:textSize="22sp" />

        </LinearLayout>

<ImageButton
    android:id="@+id/imgbtn_namayesh__faktor_forosh"
    android:layout_width="160dp"
    android:layout_height="50dp"
    android:background="@drawable/btnnamayesh"
    android:src="@drawable/btn_click" />

    </LinearLayout>