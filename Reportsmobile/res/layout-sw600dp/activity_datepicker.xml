<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/backmenutransparent" >

    <LinearLayout
        android:id="@+id/rel_cal"
        android:layout_width="350dp"
        android:layout_height="200dp"
        android:layout_centerHorizontal="true"
        android:layout_centerInParent="true"
        android:layout_marginTop="20sp"
        android:background="@drawable/datepicjerbg"
        android:gravity="center"
        android:orientation="horizontal" >

        <LinearLayout
            android:id="@+id/rel_left"
            android:layout_width="60sp"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="vertical" >

            <ImageView
                android:id="@+id/top_image_year"
                android:layout_width="20sp"
                android:layout_height="20sp"
                android:layout_margin="5dp"
                android:background="@drawable/arow_top_calender" >
            </ImageView>

            <TextView
                android:id="@+id/txt_name_year"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="1392"
                android:textColor="#FFFFFF"
                android:textSize="18sp" >
            </TextView>

            <ImageView
                android:id="@+id/down_image_year"
                android:layout_width="20sp"
                android:layout_height="20sp"
                android:layout_margin="5dp"
                android:background="@drawable/arow_down_calender" >
            </ImageView>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/rel_center"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="vertical" >

            <ImageView
                android:id="@+id/top_image_month"
                android:layout_width="20sp"
                android:layout_height="20sp"
                android:layout_gravity="center"
                android:layout_margin="5dp"
                android:background="@drawable/arow_top_calender" >
            </ImageView>

            <TextView
                android:id="@+id/txt_name_month"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="center"
                android:text="10"
                android:textColor="#FFFFFF"
                android:textSize="18sp" >
            </TextView>

            <ImageView
                android:id="@+id/down_image_month"
                android:layout_width="20sp"
                android:layout_height="20sp"
                android:layout_margin="5dp"
                android:background="@drawable/arow_down_calender" >
            </ImageView>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/rel_right"
            android:layout_width="30sp"
            android:layout_height="wrap_content"
            android:layout_marginRight="10dp"
            android:gravity="center"
            android:orientation="vertical" >

            <ImageView
                android:id="@+id/top_image_day"
                android:layout_width="20sp"
                android:layout_height="20sp"
                android:layout_margin="5dp"
                android:background="@drawable/arow_top_calender" >
            </ImageView>

            <TextView
                android:id="@+id/txt_name_day"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="10"
                android:textColor="#FFFFFF"
                android:textSize="18sp" >
            </TextView>

            <ImageView
                android:id="@+id/down_image_day"
                android:layout_width="20sp"
                android:layout_height="20sp"
                android:layout_margin="5dp"
                android:background="@drawable/arow_down_calender" >
            </ImageView>
        </LinearLayout>
    </LinearLayout>

    <ImageView
        android:id="@+id/imageView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/rel_cal"
        android:layout_centerHorizontal="true" >
    </ImageView>

    <ImageButton
        android:id="@+id/imgbtn_sabtdate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/rel_cal"
        android:layout_centerHorizontal="true"
        android:background="@drawable/img_btn_sabt"
        android:src="@drawable/btn_click" />

</RelativeLayout>