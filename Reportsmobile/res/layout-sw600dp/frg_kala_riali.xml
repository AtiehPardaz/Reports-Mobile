<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center"
    android:layout_weight="1"
    android:gravity="center"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:gravity="right" >

        <ImageButton
            android:id="@+id/imgbtn_underline_gardesh_hesabdari"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_gravity="center"
            android:background="@drawable/ic_action_date" />

        <EditText
            android:id="@+id/et_fromdate_hesabdari"
            android:layout_width="240dp"
            android:layout_height="50dp"
            android:layout_gravity="center"
           
            android:textSize="22sp" >

            <requestFocus />
        </EditText>

        <TextView
            android:id="@+id/TextView01"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right|center"
            android:gravity="right"
            android:text="تاریخ:         "
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textColor="#ffffff"
            android:textSize="22sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:gravity="right" >

        <ImageButton
            android:id="@+id/imgbtn_shakhsgardesh_hesabdari"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_gravity="center"
            android:background="@drawable/down" />

        <EditText
            android:id="@+id/et_shakhsgardesh_hesabdari"
            android:layout_width="240dp"
            android:layout_height="50dp"
            android:layout_gravity="center"
           
            android:textSize="22sp" />

        <TextView
            android:id="@+id/tv_shakhsgardesh_hesabdari"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right|center"
            android:gravity="right"
            android:text="انبارها:        "
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textColor="#ffffff"
            android:textSize="22sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:gravity="right" >

        <ImageButton
            android:id="@+id/imgbtn_sathtafsil_hesabdari"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_gravity="center"
            android:background="@drawable/down" />

        <EditText
            android:id="@+id/et_sathtafsil_hesabdari"
            android:layout_width="240dp"
            android:layout_height="50dp"
            android:layout_gravity="center"
            android:hint="کالا 1"
           
            android:textSize="22sp" />

        <TextView
            android:id="@+id/tv_sathtafsilgardesh_hesabdari"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right|center"
            android:gravity="right"
            android:text="کالاها:         "
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textColor="#ffffff"
            android:textSize="22sp" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/LinearLayout1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="left"
        android:orientation="vertical" >

        <CheckBox
            android:id="@+id/checkBox2"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:text="قیمت تمام شده"
            android:textSize="22sp" />

        <CheckBox
            android:id="@+id/acheckBox2"
            android:layout_width="wrap_content"
            android:layout_height="36dp"
            android:text="قیمت فروش    "
            android:textSize="22sp" />

        <CheckBox
            android:id="@+id/chk_tajmiiy_rialianbar"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:text="نمایش بصورت تجمیعی"
            android:textSize="22sp" />

    </LinearLayout>

    <ImageButton
        android:id="@+id/imgbtn_namayesh_riali_kalaanbar"
        android:layout_width="150dp"
        android:layout_height="50dp"
        android:background="@drawable/btnnamayesh"
        android:src="@drawable/btn_click" />

</LinearLayout>