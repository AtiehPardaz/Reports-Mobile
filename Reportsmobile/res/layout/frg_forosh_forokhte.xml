<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center"
    android:layout_weight="1"
    android:gravity="center"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="right" >

        <ImageButton
            android:id="@+id/imgbtn_underline_faktor_forosh"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:layout_gravity="center"
            android:background="@drawable/ic_action_date" />

        <EditText
            android:id="@+id/et_fromdate_forosh"
            android:layout_width="150dp"
            android:layout_height="35dp"
            android:layout_gravity="center"
           
            android:textSize="14sp" >

            <requestFocus />
        </EditText>

        <TextView
            android:id="@+id/TextView01"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right|center"
            android:gravity="right"
            android:text="از تاریخ:  "
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textColor="#ffffff"
            android:textSize="14sp" />

    </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="right" >

            <ImageButton
                android:id="@+id/imgbtn_todatecustomer_forosh"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:layout_gravity="center"
                android:background="@drawable/ic_action_date" />

            <EditText
                android:id="@+id/et_todate_forosh"
                android:layout_width="150dp"
                android:layout_height="35dp"
                android:layout_gravity="center"
               
                android:textSize="14sp" />

            <TextView
                android:id="@+id/tv_todate_forosh"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right|center"
                android:gravity="right"
                android:text="تا تاریخ:  "
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:textColor="#ffffff"
                android:textSize="14sp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="right" >

            <ImageButton
                android:id="@+id/imgbtn_customer_forosh"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:layout_gravity="center"
                android:background="@drawable/down" />

            <EditText
                android:id="@+id/et__customer_forosh"
                android:layout_width="150dp"
                android:layout_height="35dp"
                android:layout_gravity="center"
                android:hint="رضا محمودی"
               
                android:textSize="14sp" />

            <TextView
                android:id="@+id/tv__customer_forosh"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right|center"
                android:gravity="right"
                android:text="مشتری:   "
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:textColor="#ffffff"
                android:textSize="14sp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="right" >

            <ImageButton
                android:id="@+id/imgbtn_bazaryab_forosh"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:layout_gravity="center"
                android:background="@drawable/down" />

            <EditText
                android:id="@+id/et__bazarya_forosh"
                android:layout_width="150dp"
                android:layout_height="35dp"
                android:layout_gravity="center"
                android:hint="سینا رضایی"
               
                android:textSize="14sp" />

            <TextView
                android:id="@+id/tv__bazarya_forosh"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right|center"
                android:gravity="right"
                android:text="بازاریاب: "
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:textColor="#ffffff"
                android:textSize="14sp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="right" >

            <ImageButton
                android:id="@+id/imgbtn_foroshande_forosh"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:layout_gravity="center"
                android:background="@drawable/down" />

            <EditText
                android:id="@+id/et__foroshande_forosh"
                android:layout_width="150dp"
                android:layout_height="35dp"
                android:layout_gravity="center"
                android:hint="تبریزی"
               
                android:textSize="14sp" />

            <TextView
                android:id="@+id/tv__foroshande_forosh"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right|center"
                android:gravity="right"
                android:text="فروشنده:"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:textColor="#ffffff"
                android:textSize="14sp" />

        </LinearLayout>
         
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="right" >

            <ImageButton
                android:id="@+id/imgbtn_kala_forosh"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:layout_gravity="center"
                android:background="@drawable/down" />

            <EditText
                android:id="@+id/et__kala_forosh"
                android:layout_width="150dp"
                android:layout_height="35dp"
                android:layout_gravity="center"
                android:hint="کالا اول"
               
                android:textSize="14sp" />

            <TextView
                android:id="@+id/tv__kala_forosh"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right|center"
                android:gravity="right"
                android:text="کالا:         "
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:textColor="#ffffff"
                android:textSize="14sp" />

        </LinearLayout>
 
<LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="right" >

            <ImageButton
                android:id="@+id/imgbtn_khadamat_forosh"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:layout_gravity="center"
                android:background="@drawable/down" />

            <EditText
                android:id="@+id/et__khadamat_forosh"
                android:layout_width="150dp"
                android:layout_height="35dp"
                android:layout_gravity="center"
               
                android:textSize="14sp" />

            <TextView
                android:id="@+id/tv__khadamat_forosh"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right|center"
                android:gravity="right"
                android:text="خدمات:   "
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:textColor="#ffffff"
                android:textSize="14sp" />

        </LinearLayout>

        <ImageButton
            android:id="@+id/imgbtn_namayesh__forokhte_forosh"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/btnnamayesh"
            android:src="@drawable/btn_click" />

    </LinearLayout>