<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center"
    android:layout_weight="1"
    android:gravity="center"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@color/marker_color"
        android:gravity="right" >

        <ImageButton
            android:id="@+id/imgbtn_fromdate_forokhte_forosh"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:layout_gravity="center"
            android:layout_marginLeft="5dp"
            android:background="@drawable/ic_action_date" />

        <TextView
            android:id="@+id/et_fromdate_forokhte_forosh"
            android:layout_width="180dp"
            android:layout_height="35dp"
            android:layout_gravity="center"
            android:gravity="center"
            android:hint="@string/fromdate"
            android:textSize="14sp" >

            <requestFocus />
        </TextView>

        <TextView
            android:id="@+id/TextView01"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right|center"
            android:gravity="right"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textColor="#ffffff"
            android:textSize="14sp" />

    </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:background="@color/marker_color"
            android:gravity="right" >

            <ImageButton
                android:id="@+id/imgbtn_todate_forokhte_forosh"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:layout_gravity="center"
                android:layout_marginLeft="5dp"
                android:background="@drawable/ic_action_date" />

            <TextView
                android:id="@+id/et_todate_forokhte_forosh"
                android:layout_width="180dp"
                android:layout_height="35dp"
                android:layout_gravity="center"
                android:gravity="center"
                android:hint="@string/todate"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/tv_todate_forosh"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right|center"
                android:gravity="right"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:textColor="#ffffff"
                android:textSize="14sp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:background="@color/marker_color"
            android:gravity="right" >

            <ImageButton
                android:id="@+id/imgbtn_customer_forokhte_forosh"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:layout_gravity="center"
                android:layout_marginLeft="5dp"
                android:background="@drawable/down" />

            <TextView
                android:id="@+id/et_customer_forokhte_forosh"
                android:layout_width="180dp"
                android:layout_height="35dp"
                android:layout_gravity="center"
                android:gravity="center"
                android:hint="@string/moshtari"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/tv__customer_forosh"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right|center"
                android:gravity="right"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:textColor="#ffffff"
                android:textSize="14sp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:background="@color/marker_color"
            android:gravity="right" >

            <ImageButton
                android:id="@+id/imgbtn_bazaryab_forokhte_forosh"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:layout_gravity="center"
                android:layout_marginLeft="5dp"
                android:background="@drawable/down" />

            <TextView
                android:id="@+id/et__bazarya_forokhte_forosh"
                android:layout_width="180dp"
                android:layout_height="35dp"
                android:layout_gravity="center"
                android:gravity="center"
                android:hint="@string/bazaryab"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/tv__bazarya_forosh"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right|center"
                android:gravity="right"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:textColor="#ffffff"
                android:textSize="14sp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:background="@color/marker_color"
            android:gravity="right" >

            <ImageButton
                android:id="@+id/imgbtn_foroshande_forokhte_forosh"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:layout_gravity="center"
                android:layout_marginLeft="5dp"
                android:background="@drawable/down" />

            <TextView
                android:id="@+id/et__foroshande_forokhte_forosh"
                android:layout_width="180dp"
                android:layout_height="35dp"
                android:layout_gravity="center"
                android:gravity="center"
                android:hint="@string/foroshande"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/tv__foroshande_forosh"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right|center"
                android:gravity="right"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:textColor="#ffffff"
                android:textSize="14sp" />

        </LinearLayout>
         
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:background="@color/marker_color"
            android:gravity="right" >

            <ImageButton
                android:id="@+id/imgbtn_kala_forokhte_forosh"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:layout_gravity="center"
                android:layout_marginLeft="5dp"
                android:background="@drawable/down" />

            <TextView
                android:id="@+id/et__kala_forokhte_forosh"
                android:layout_width="180dp"
                android:layout_height="35dp"
                android:layout_gravity="center"
                android:gravity="center"
                android:hint="@string/kala"
                android:textSize="14sp" />

        </LinearLayout>
 
<LinearLayout
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginBottom="10dp"
    android:layout_marginTop="5dp"
    android:background="@color/marker_color"
    android:gravity="right" >

            <ImageButton
                android:id="@+id/imgbtn_khadamat_forokhte_forosh"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:layout_gravity="center"
                android:layout_marginLeft="5dp"
                android:background="@drawable/down" />

            <TextView
                android:id="@+id/et_khadamat_forokhte_forosh"
                android:layout_width="180dp"
                android:layout_height="35dp"
                android:layout_gravity="center"
                android:gravity="center"
                android:hint="@string/khadamat"
                android:textSize="14sp" />

        </LinearLayout>

        <ImageButton
            android:id="@+id/imgbtn_namayesh__forokhte_forosh"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="#83e2e2"
            android:src="@drawable/newnamayesh" />

    </LinearLayout>