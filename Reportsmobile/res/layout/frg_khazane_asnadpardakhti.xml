<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center"
    android:layout_weight="1"
    android:gravity="center"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:background="@color/marker_color"
        android:gravity="center" >

        <ImageButton
            android:id="@+id/imgbtn_date_pardakhtebteda_khazane"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:layout_gravity="center"
            android:layout_marginLeft="5dp"
            android:background="@drawable/ic_action_date" />

        <TextView
            android:id="@+id/et_date_pardakhtebteda_khazane"
            android:layout_width="180dp"
            android:layout_height="35dp"
            android:layout_gravity="center"
            android:gravity="center"
            android:hint="@string/pardakhtebteda"
            android:textSize="14sp" >

            <requestFocus />
        </TextView>
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:background="@color/marker_color"
        android:gravity="center" >

        <ImageButton
            android:id="@+id/imgbtn_date_pardakhtenteha_khazane"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:layout_gravity="center"
            android:layout_marginLeft="5dp"
            android:background="@drawable/ic_action_date" />

        <TextView
            android:id="@+id/et_date_pardakhtenteha_khazane"
            android:layout_width="180dp"
            android:layout_height="35dp"
            android:layout_gravity="center"
            android:gravity="center"
            android:hint="@string/pardakhtenteha"
            android:textSize="14sp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:background="@color/marker_color"
        android:gravity="right" >

        <ImageButton
            android:id="@+id/imgbtn_date_sarresidebteda_khazane"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:layout_gravity="center"
            android:layout_marginLeft="5dp"
            android:background="@drawable/ic_action_date" />

        <TextView
            android:id="@+id/et_date_sarresidebteda_khazane"
            android:layout_width="180dp"
            android:layout_height="35dp"
            android:layout_gravity="center"
            android:gravity="center"
            android:hint="@string/sarresidebteda"
            android:textSize="14sp" >

            <requestFocus />
        </TextView>
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:background="#ffffff"
        android:gravity="right" >

        <ImageButton
            android:id="@+id/imgbtn_date_sarresidenteha_khazane"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:layout_gravity="center"
            android:layout_marginLeft="5dp"
            android:background="@drawable/ic_action_date" />

        <TextView
            android:id="@+id/et_date_sarresidenteha_khazanee"
            android:layout_width="180dp"
            android:layout_height="35dp"
            android:layout_gravity="center"
            android:gravity="center"
            android:hint="@string/sarresidenteha"
            android:textSize="14sp" >

            <requestFocus />
        </TextView>
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="5dp"
        android:background="#ffffff"
        android:gravity="center" >

        <ImageButton
            android:id="@+id/imgbtn_shakhs_khazane"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:background="#ffffff"
            android:src="@drawable/down" />

        <TextView
            android:id="@+id/et__skhakhs_khazane"
            android:layout_width="180dp"
            android:layout_height="35dp"
            android:layout_gravity="center"
            android:gravity="center"
            android:hint="@string/shakhsgirande"
            android:textSize="14sp" />

    </LinearLayout>

    <ImageButton
        android:id="@+id/imgbtn_namayesh_pardakhti_khazane"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="20dp"
        android:background="#83e2e2"
        android:src="@drawable/btnshow_click" />

</LinearLayout>