<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center"
    android:layout_weight="1"
    android:gravity="center"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@color/white_color"
        android:gravity="right" >

        <ImageButton
            android:id="@+id/imgbtn_date_pardakhtebteda_daryaftikhazane"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:layout_gravity="center"
            android:layout_marginLeft="5dp"
            android:background="@drawable/ic_action_date" />

        <TextView
            android:id="@+id/et_date_pardakhtebtedaa_daryaftikhazane"
            android:layout_width="180dp"
            android:layout_height="35dp"
            android:layout_gravity="center"
            android:gravity="center"
            android:hint="تاریخ پرداخت ابتدا"
            android:textSize="14sp" >

            <requestFocus />
        </TextView>
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:background="@color/white_color"
        android:gravity="right" >

        <ImageButton
            android:id="@+id/imgbtn_date_pardakhtenteha_daryaftikhazane"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:layout_gravity="center"
            android:layout_marginLeft="5dp"
            android:background="@drawable/ic_action_date" />

        <TextView
            android:id="@+id/et_date_pardakhtenteha_daryaftikhazane"
            android:layout_width="180dp"
            android:layout_height="35dp"
            android:layout_gravity="center"
            android:gravity="center"
            android:hint="تاریخ پرداخت انتها"
            android:textSize="14sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:background="@color/white_color"
        android:gravity="right" >

        <ImageButton
            android:id="@+id/imgbtn_date_sarresidebteda_daryaftikhazane"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:layout_gravity="center"
            android:layout_marginLeft="5dp"
            android:background="@drawable/ic_action_date" />

        <TextView
            android:id="@+id/et_date_sarresidebteda_daryaftikhazane"
            android:layout_width="180dp"
            android:layout_height="35dp"
            android:layout_gravity="center"
            android:gravity="center"
            android:hint="تاریخ سررسید ابتدا"
            android:textSize="14sp" >

            <requestFocus />
        </TextView>
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:background="@color/white_color"
        android:gravity="right" >

        <ImageButton
            android:id="@+id/imgbtn_date_sarresidenteha_daryaftikhazane"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:layout_gravity="center"
            android:layout_marginLeft="5dp"
            android:background="@drawable/ic_action_date" />

        <TextView
            android:id="@+id/et_date_sarresidenteha_daryaftikhazanee"
            android:layout_width="180dp"
            android:layout_height="35dp"
            android:layout_gravity="center"
            android:gravity="center"
            android:hint="تاریخ سررسید انتها"
            android:textSize="14sp" >

            <requestFocus />
        </TextView>
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:layout_marginTop="5dp"
        android:background="@color/white_color"
        android:gravity="right" >

        <ImageButton
            android:id="@+id/imgbtn_shakhs_daryaftikhazane"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:layout_gravity="center"
            android:layout_marginLeft="5dp"
            android:background="@drawable/down" />

        <TextView
            android:id="@+id/et_skhakhs_daryaftikhazane"
            android:layout_width="180dp"
            android:layout_height="35dp"
            android:layout_gravity="center"
            android:gravity="center"
            android:hint="شخص گیرنده"
            android:textSize="14sp" />
    </LinearLayout>

    <ImageButton
        android:id="@+id/imgbtn_namayesh_daryafti_khazane"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@color/blue_green"
        android:src="@drawable/newnamayesh" />

</LinearLayout>