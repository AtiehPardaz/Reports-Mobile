<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center"
    android:layout_weight="1"
    android:gravity="center"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:background="@color/marker_color"
        android:gravity="right" >

        <ImageButton
            android:id="@+id/imgbtn_underline_gardesh_hesabdari"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:layout_gravity="center"
            android:layout_marginLeft="5dp"
            android:background="@drawable/ic_action_date" />

        <EditText
            android:id="@+id/et_fromdate_hesabdari"
            android:layout_width="180dp"
            android:layout_height="35dp"
            android:layout_gravity="center"
            android:hint="تاریخ:         "
            android:textSize="14sp" >

            <requestFocus />
        </EditText>

        <TextView
            android:id="@+id/TextView01"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right|center"
            android:gravity="right"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textColor="#ffffff"
            android:textSize="14sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="5dp"
        android:background="@color/marker_color"
        android:gravity="right" >

        <ImageButton
            android:id="@+id/imgbtn_shakhsgardesh_hesabdari"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:layout_gravity="center"
            android:layout_marginLeft="5dp"
            android:background="@drawable/down" />

        <EditText
            android:id="@+id/et_shakhsgardesh_hesabdari"
            android:layout_width="180dp"
            android:layout_height="35dp"
            android:layout_gravity="center"
            android:hint="انبارها:        "
            android:textSize="14sp" />

        <TextView
            android:id="@+id/tv_shakhsgardesh_hesabdari"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right|center"
            android:gravity="right"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textColor="#ffffff"
            android:textSize="14sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="5dp"
        android:background="@color/marker_color"
        android:gravity="right" >

        <ImageButton
            android:id="@+id/imgbtn_sathtafsil_hesabdari"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:layout_gravity="center"
            android:layout_marginLeft="5dp"
            android:background="@drawable/down" />

        <EditText
            android:id="@+id/et_sathtafsil_hesabdari"
            android:layout_width="180dp"
            android:layout_height="35dp"
            android:layout_gravity="center"
            android:hint="کالاها:         "
            android:textSize="14sp" />

        <TextView
            android:id="@+id/tv_sathtafsilgardesh_hesabdari"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right|center"
            android:gravity="right"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textColor="#ffffff"
            android:textSize="14sp" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/LinearLayout1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="left"
        android:orientation="vertical" >

        <CheckBox
            android:id="@+id/checkBox2"
            android:layout_width="wrap_content"
            android:layout_height="35dp"
            android:text="قیمت تمام شده"
            android:textSize="14sp"
            android:visibility="gone" />

        <CheckBox
            android:id="@+id/acheckBox2"
            android:layout_width="wrap_content"
            android:layout_height="36dp"
            android:text="قیمت فروش    "
            android:textSize="14sp"
            android:visibility="gone" />

        <CheckBox
            android:id="@+id/chk_tajmiiy_rialianbar"
            android:layout_width="wrap_content"
            android:layout_height="35dp"
            android:layout_marginBottom="10dp"
            android:text="نمایش بصورت تجمیعی"
            android:textSize="14sp" />

    </LinearLayout>

    <ImageButton
        android:id="@+id/imgbtn_namayesh_riali_kalaanbar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@color/blue_green"
        android:src="@drawable/newnamayesh" />

</LinearLayout>