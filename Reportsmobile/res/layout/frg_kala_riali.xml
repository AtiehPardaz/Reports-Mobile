<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center"
    android:layout_weight="1"
    android:gravity="center"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:background="@color/marker_color"
        android:gravity="right" >

        <ImageButton
            android:id="@+id/imgbtn_datee_riali_kala"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:layout_gravity="center"
            android:layout_marginLeft="5dp"
            android:background="@drawable/ic_action_date" />

        <TextView
            android:id="@+id/et_date_riali_kala"
            android:layout_width="180dp"
            android:layout_height="35dp"
            android:layout_gravity="center"
            android:gravity="center"
            android:hint="تاریخ:         "
            android:textSize="14sp" >

            <requestFocus />
        </TextView>
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="5dp"
        android:background="@color/marker_color"
        android:gravity="right" >

        <ImageButton
            android:id="@+id/imgbtn_anbarha_riali_kala"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:layout_gravity="center"
            android:layout_marginLeft="5dp"
            android:background="@drawable/down" />

        <TextView
            android:id="@+id/et_anbarha_riali_kala"
            android:layout_width="180dp"
            android:layout_height="35dp"
            android:layout_gravity="center"
            android:gravity="center"
            android:hint="انبارها:        "
            android:textSize="14sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="5dp"
        android:background="@color/marker_color"
        android:gravity="right" >

        <ImageButton
            android:id="@+id/imgbtn_kala_riali_kala"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:layout_gravity="center"
            android:layout_marginLeft="5dp"
            android:background="@drawable/down" />

        <TextView
            android:id="@+id/et_kala_riali_kala"
            android:layout_width="180dp"
            android:layout_height="35dp"
            android:layout_gravity="center"
            android:gravity="center"
            android:hint="کالاها:         "
            android:textSize="14sp" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/LinearLayout1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginBottom="10dp"
        android:layout_marginTop="5dp"
        android:background="@color/marker_color"
        android:gravity="left|center"
        android:orientation="vertical" >

        <CheckBox
            android:id="@+id/checkBox2"
            android:layout_width="wrap_content"
            android:layout_height="35dp"
            android:text="قیمت تمام شده"
            android:textSize="14sp"
            android:visibility="gone" />

        <CheckBox
            android:id="@+id/acheckBox2"
            android:layout_width="wrap_content"
            android:layout_height="36dp"
            android:text="قیمت فروش    "
            android:textSize="14sp"
            android:visibility="gone" />

        <CheckBox
            android:id="@+id/chk_tajmiiy_rialianbar"
            android:layout_width="213dp"
            android:layout_height="35dp"
            android:layout_gravity="center"
            android:layout_margin="2dp"
            android:gravity="right|center"
            android:text="نمایش بصورت تجمیعی"
            android:textColor="@color/first_row_text_color"
            android:textSize="13sp" />

    </LinearLayout>

    <ImageButton
        android:id="@+id/imgbtn_namayesh_riali_kalaanbar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@color/blue_green"
        android:src="@drawable/newnamayesh" />

</LinearLayout>