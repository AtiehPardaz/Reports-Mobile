<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@drawable/backgroundsade" >

<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/actionbar"
        android:gravity="right" >

        <ImageButton
            android:id="@+id/imgbtn_menu_home"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginRight="15dp"
            android:background="@drawable/homebutton"
            android:onClick="btnmenu"
            android:src="@drawable/btn_clickmenu" />

    </LinearLayout>

<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/actionbar2"
    android:gravity="center" >

    <Button
        android:id="@+id/button3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Button" />

    <View
        android:id="@+id/View02"
        android:layout_width="3dp"
        android:layout_height="50dp"
        android:layout_gravity="top"
        android:layout_margin="2dp"
        android:background="#88a6bd" />

    <Button
        android:id="@+id/button2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Button" />

    <View
        android:id="@+id/View03"
        android:layout_width="3dp"
        android:layout_height="50dp"
        android:layout_gravity="top"
        android:layout_margin="2dp"
        android:background="#88a6bd" />

    <Button
        android:id="@+id/button1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Button" />

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:gravity="center"
        android:orientation="vertical" >

        <View
            android:id="@+id/View01"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1" />

        <ImageView
            android:id="@+id/imageView1"
            android:layout_width="200dp"
            android:layout_height="80dp"
            android:src="@drawable/loadinglogo" />

        <View
            android:id="@+id/view1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1" />

    </LinearLayout>
</LinearLayout>

<LinearLayout
    android:id="@+id/linearmenu"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="right"
    android:visibility="gone" >

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="2dp"
        android:layout_marginTop="55dp"
        android:background="@drawable/menubackground"
        android:gravity="right"
        android:orientation="vertical" >

        <ImageButton
            android:id="@+id/imgbtn_forosh_home"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:background="@drawable/btnforosh"
            android:src="@drawable/btn_click" />

        <ImageButton
            android:id="@+id/imgbtn_khazane_home"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/btnkhazane"
            android:src="@drawable/btn_click" />

        <ImageButton
            android:id="@+id/imgbtn_hesabdari_home"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/btnhesabdari"
            android:src="@drawable/btn_click" />

        <ImageButton
            android:id="@+id/imgbtn_kala_home"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/btnkala"
            android:src="@drawable/btn_click" />

        <ImageButton
            android:id="@+id/imgbtn_domain_home"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp"
            android:background="@drawable/btndomain"
            android:src="@drawable/btn_click" />
    </LinearLayout>

</LinearLayout>

</RelativeLayout>